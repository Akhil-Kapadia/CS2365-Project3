package cs2365_project3;

import java.util.Random

public class Dice
{
  Random rand = new Random();
  private int diceValue;
  private int diceIndex;
  private boolean reroll = false;

  public Dice(int index, boolean reroll, int type)
  {
    this.diceIndex = index; //give each dice an index to reference 
    this.reroll = reroll; //reroll flag
    this.diceType = type;
  }

  public int getDiceType
  {
    return this.diceType;
  }

  public void rollDice()
  {
    this.diceValue = rand.nextInt(6)
  }
  
  public void setReroll(boolean canReroll)
  {
    this.reroll = canReroll;
  }
  
  public boolean getReroll()
  {
    return this.reroll;
  }
  
  public int getDiceInt()
  {
    return this.diceValue;
  }
  
  public string getDiceString()
  {
    String value = "error";
    tpye = getDiceType();
    if(type == 1)
    {
      switch(getDiceInt()) // normal dice 
      {
        case 0:
            value = "Arrow";
            break;
        case 1:
            value = "Dynamite";
            break;
        case 2:
            value = "Shoot person one over left or right";
            break;
        case 3:
            value = "Shoot person two over left or right";
            break;
        case 4:
            value = "Beer";
            break;
        case 5:
            value = "Gatling";
            break;
        }
        return value:
      }
      
      elif(type == 2)// loudmouth dice
      {
        switch(getDiceInt())
        {
          case 0:
              value = "Arrow";
              break;
          case 1:
              value = "Bullet";
              break;
          case 2:
              value = "Double Shoot 1";
              break;
          case 3:
              value = "Double Shoot 2";
              break;
          case 4:
              value = "Dynamite";
              break;
          case 5:
              value = "Double Gattling";
              break;
        }
        return value;
      }
      
      elif(type == 3)// coward dice
      {
        switch(getDiceInt())
        {
          case 0:
              value = "Arrow";
              break;
          case 1:
              value = "Broken Arrow";
              break;
          case 2:
              value = "Shoot 1";
              break;
          case 3:
              value = "Beer";
              break;
          case 4:
              value = "Dynamite";
              break;
          case 5:
              value = "Double Beer";
              break;
        }
        return value;
      }
      
      
      
      elif(type == 4) // duel dice
      {
        switch(getDiceInt())
        {
          case 0:
              value = "Arrow";
              break;
          case 1:
              value = "Dynamite";
              break;
          case 2:
              value = "Whiskey Bottle";
              break;
          case 3:
              value = "Duel Guns";
              break;
          case 4:
              value = "Duel Guns";
              break;
          case 5:
              value = "Gattling" 
              break;
        }
        return value;
      }
    }
    
    
      
      
              
            
        
          


